{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      },
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  